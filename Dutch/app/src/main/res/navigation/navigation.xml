<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="jkey20.dutch.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="jkey20.dutch.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_locationCheckFragment"
            app:destination="@id/locationCheckFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationCheckFragment"
        android:name="jkey20.dutch.locationcheck.LocationCheckFragment"
        android:label="LocationCheckFragment" >
        <argument
            android:name="locationData"
            app:argType="jkey20.dutch.model.LocationData" />
    </fragment>
</navigation>