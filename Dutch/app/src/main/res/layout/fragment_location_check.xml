<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="name"
            type="String" />

        <variable
            name="address"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/check_maplayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@color/white"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_check_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{name}"

                android:gravity="start"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"

                android:textColor="@color/textview_textcolor_black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:text="@{address}"
                android:id="@+id/textview_check_address"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"


                android:textColor="@color/textview_textcolor_black"

                android:textSize="12sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/locationsetbutton"


                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/button_background_black"

                android:gravity="center"
                android:text="위치 설정"
                android:textColor="@color/button_textcolor_white"
                android:textSize="20dp"></Button>

        </LinearLayout>

    </LinearLayout>
</layout>