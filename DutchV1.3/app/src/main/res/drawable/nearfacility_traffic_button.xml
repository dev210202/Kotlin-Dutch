<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item android:top="-5dp"
        android:left="-5dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/dark_grey" />

        </shape>
    </item>

    <item>

        <selector>
            <item android:drawable="@color/orange" android:state_selected="true" />
            <item android:drawable="@color/orange" android:state_pressed="true" />
            <item android:drawable="@color/transparent" android:state_selected="false" /> <!-- selected -->
            <item android:drawable="@color/orange"/> <!-- default -->

        </selector>
    </item>
</layer-list>