<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonWhiteBig">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="all_background_top">

        <item name="android:background">@color/layout_background_black</item>

    </style>

    <style name="main_logo">

        <item name="android:background">@drawable/main_logo_36</item>

    </style>

    <style name="all_title">
        <item name="android:lineSpacingExtra">2dp</item>

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textview_textcolor_white</item>
    </style>

    <style name="main_middlelocationsearch">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/button_textcolor_white</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="dynamicbutton_background">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/button_main_location_search</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="dynamicminusbutton_backround">
        <item name="android:background">@drawable/item_dynamicremove_24</item>
    </style>

    <style name="search_edittext">
        <item name="android:inputType">textPostalAddress</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:hint">주소를 검색해주세요</item>
    </style>

    <style name="search_searchbutton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/search_magnifier_24</item>
    </style>

    <style name="search_marker">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>

    <style name="search_locationnametextview">
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="search_locationaddresstextview">
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12dp</item>
    </style>


    <style name="search_rightarrowbutton">
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/location_ic_arrow_right</item>
    </style>

    <style name="locationcheck_nametextview">
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/textview_textcolor_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="locationcheck_addresstextview">
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/textview_textcolor_black</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="locationcheck_locationsetbutton">
        <item name="android:background">@color/button_background_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_textcolor_white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="middlelocation_resulttextview">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textview_textcolor_orange</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="middlelocation_addresstextview">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/textview_textcolor_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainSearchLocationButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/button_main_location_search</item>

    </style>

    <style name="BottomBackgroundOrange">

        <item name="android:background">@color/orange</item>

    </style>


    <style name="BottomBackgroundBlack">

        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
